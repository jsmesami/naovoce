root = true


[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

[*.py]
indent_style = space
indent_size = 4
line_length=120
multi_line_output=0
lines_after_imports=2

[*.less]
indent_style = tab

[*.coffee]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
